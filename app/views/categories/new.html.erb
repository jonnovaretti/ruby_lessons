<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
        <%= render 'shared/errors', object: @category %>
        <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row mb-3">
            <%= f.label :name, "Category", class: "col-2 col-form-label text-light" %>
            <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Name of category" %>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-3">
                <div class="form-group row">
                    <%= f.submit class: "btn btn-outline-light btn-lg" %>
                </div>
            </div>
        </div>
        <% end %>
    </div>
  </div>
</div>