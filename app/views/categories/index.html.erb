<div class="text-center mb-3">
    <h1>Categories</h1>
</div>

<div class="container">
    <div class="row">
        <% @categories.each do |category| %>
            <div class="col-4">
                <div class="card border-success mb-3 shadow mb-5 bg-white rounded" style="max-width: 18rem;">
                <div class="card-body">
                    <%= link_to category.name, category_path(category), class:"text-success" %>
                </div>
                <div class="card-footer bg-transparent border-success text-center">
                    <%= link_to "Edit", edit_category_path(category), class:"btn btn-outline-success" %>
                    <%= link_to "Delete", category_path(category), class:"btn btn-outline-danger", method: :delete, data: { confirm: "Deseja continuar?"} %>
                </div>
                </div>
            </div>
        <% end %>
    </div>
    
    
</div>